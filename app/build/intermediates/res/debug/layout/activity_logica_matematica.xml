<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fatec.shewbaca.LogicaMatematica"
    android:id="@+id/x"
    android:clickable="false">

    <TextView
        android:id="@+id/out_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        android:text="@string/hello_world" />

    <TextView
        android:id="@+id/lblPerguntaLM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="23dp"
        android:text="Clique no botÃ£o iniciar..."
        android:textSize="24sp" />

    <Button
        android:id="@+id/btAlt1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/lblPerguntaLM"
        android:layout_below="@+id/lblPerguntaLM"
        android:layout_marginTop="60dp"
        android:enabled="false"
        android:onClick="btAlt1"
        android:text="" />

    <Button
        android:id="@+id/btAlt2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignBaseline="@+id/btAlt1"
        android:layout_alignBottom="@+id/btAlt1"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/btAlt1"
        android:enabled="false"
        android:onClick="btAlt2"
        android:text="" />

    <Button
        android:id="@+id/btAlt3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignBaseline="@+id/btAlt2"
        android:layout_alignBottom="@+id/btAlt2"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/btAlt2"
        android:enabled="false"
        android:onClick="btAlt3"
        android:text="" />

    <Button
        android:id="@+id/btAlt4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignTop="@+id/btAlt3"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/btAlt3"
        android:enabled="false"
        android:onClick="btAlt4"
        android:text="" />

    <Button
        android:id="@+id/btPublicarLM"
        android:enabled="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/publicar" />

    <Button
        android:id="@+id/btProx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="btProx"
        android:text=">>>" />

    <Button
        android:id="@+id/btIniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btProx"
        android:layout_toLeftOf="@+id/btProx"
        android:onClick="btIniciar"
        android:longClickable="true"
        android:background="@drawable/iniciar" />

</RelativeLayout>
