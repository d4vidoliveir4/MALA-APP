<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fatec.shewbaca.Jogomemoria1" >

    <Button
        android:id="@+id/btn1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#9AFF9A"
        android:enabled="false"
        android:onClick="Btn1"
        android:text=""
        android:textSize="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBaseline="@+id/btn1"
        android:layout_alignBottom="@+id/btn1"
        android:layout_marginLeft="89dp"
        android:layout_toRightOf="@+id/btn1"
        android:background="#9AFF9A"
        android:enabled="false"
        android:text=""
        android:textSize="80dp" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBaseline="@+id/btn6"
        android:layout_alignBottom="@+id/btn6"
        android:layout_alignLeft="@+id/btn2"
        android:background="#9AFF9A"
        android:enabled="false"
        android:text=""
        android:textSize="80dp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/btn1"
        android:layout_alignTop="@+id/btn5"
        android:background="#9AFF9A"
        android:enabled="false"
        android:text=""
        android:textSize="80dp" />

    <Button
        android:id="@+id/btnIniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="58dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/iniciar"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblErros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:text="0" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn3"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="112dp"
        android:layout_toRightOf="@+id/btn3"
        android:text="Número de erros: " />

    <Button
        android:id="@+id/btn6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/btnIniciar"
        android:layout_marginBottom="44dp"
        android:layout_marginLeft="86dp"
        android:layout_toRightOf="@+id/btn5"
        android:background="#9AFF9A"
        android:enabled="false"
        android:textSize="80dp" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBaseline="@+id/btn2"
        android:layout_alignBottom="@+id/btn2"
        android:layout_alignLeft="@+id/btn6"
        android:background="#9AFF9A"
        android:enabled="false"
        android:textSize="80dp" />

    <TextView
        android:id="@+id/lblResultadoFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn5"
        android:layout_alignRight="@+id/btn5"
        android:layout_marginBottom="22dp"
        android:textSize="40dp"
        android:text="" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn3"
        android:layout_alignBottom="@+id/btn3"
        android:layout_alignLeft="@+id/textView1"
        android:text="Número de acertos: " />

    <TextView
        android:id="@+id/lblAcertos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:text="0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView1"
        android:text="Tempo: " />

    <TextView
        android:id="@+id/lblTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:text="0" />

    <Button
        android:id="@+id/btnProximo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnIniciar"
        android:layout_alignBottom="@+id/btnIniciar"
        android:layout_alignRight="@+id/btn6"
        android:background="#FF7F00"
        android:textStyle="bold"
        android:text="Próximo"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btPublicar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnProximo"
        android:layout_alignRight="@+id/lblTime"
        android:background="@color/verdeEscuro"
        android:enabled="false"
        android:onClick="btPublicar"
        android:text=" Publicar\nResultado "
        android:visibility="invisible" />

    <TextView
        android:id="@+id/lblMais1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblAcertos"
        android:layout_alignBottom="@+id/lblAcertos"
        android:layout_marginLeft="29dp"
        android:textColor="@color/verde"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/lblAcertos"
        android:visibility="invisible"
        android:text="+1" />

</RelativeLayout>
