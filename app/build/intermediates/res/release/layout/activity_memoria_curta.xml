<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fatec.shewbaca.MemoriaCurta" >

    <TextView
        android:id="@+id/lblNumeros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/lblnumeros"
        android:textSize="100sp" />

    <TextView
        android:id="@+id/lblEixoX"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lblNumeros"
        android:layout_marginBottom="20dp"
        android:text="Neste Exercicios você tera 10 segundos para memorizar os números e depois repeti-los." />

    <Button
        android:id="@+id/btInicia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lblEixoX"
        android:layout_below="@+id/lblNumeros"
        android:background="@drawable/iniciar"
        android:onClick="btRandom"/>
    
	 <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btInicia"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/btInicia"
        android:ems="10"
        >

        <requestFocus />
    </EditText>
    
    <Button
        android:id="@+id/btPublicarMemC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btInicia"
        android:layout_alignBottom="@+id/btInicia"
        android:layout_alignRight="@+id/lblEixoX"
        android:onClick="btPublicar"
        android:enabled="false"
        android:background="@drawable/publicar" />

</RelativeLayout>
