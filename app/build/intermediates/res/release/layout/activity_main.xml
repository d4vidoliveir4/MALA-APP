<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87CEFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fatec.shewbaca.MainActivity" >

    <Button
        android:id="@+id/btExercicios"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:background="@drawable/exercicios"
        android:layout_below="@+id/btGravar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="92dp"
        android:layout_marginEnd="92dp" />

    <Button
        android:id="@+id/btAjuda"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btExercicios"
        android:layout_below="@+id/btExercicios"
        android:layout_marginTop="35dp"
        android:background="@drawable/sobre"
        android:onClick="btsobre" />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Nome"
        android:ems="10"
        android:id="@+id/txtNome"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtIdade"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txtNome"
        android:layout_toEndOf="@+id/txtNome"
        android:text="Idade" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gravar"
        android:id="@+id/btGravar"
        android:layout_alignBottom="@+id/txtIdade"
        android:layout_toRightOf="@+id/txtIdade"
        android:layout_toEndOf="@+id/txtIdade"
        android:onClick="btGravar" />

    <Button
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btExercicios"
        android:layout_toLeftOf="@+id/btGravar"
        android:layout_toStartOf="@+id/btGravar"
        android:background="@drawable/logo" />

</RelativeLayout><!-- From: file:/C:/Users/Caique/Desktop/MALA%20APP17052015_arrumado/MALA%20APP/app/src/main/res/layout/activity_main.xml -->