<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fatec.shewbaca.JogoMaior">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Identifique qual lado tem o maior valor somado"
        android:id="@+id/textView13"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/tesq"
        android:layout_below="@+id/textView13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="84dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/tdir"
        android:layout_alignTop="@+id/tesq"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="54dp"
        android:layout_marginEnd="54dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Esquerda"
        android:id="@+id/btesq"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="respesq" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Direita"
        android:id="@+id/btdir"
        android:layout_alignTop="@+id/btesq"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="respdir" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogar"
        android:id="@+id/btjogarmaior"
        android:layout_above="@+id/btesq"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="61dp"
        android:onClick="iniciaMaior" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Pontos"
        android:id="@+id/textView14"
        android:layout_below="@+id/btesq"
        android:layout_alignRight="@+id/btjogarmaior"
        android:layout_alignEnd="@+id/btjogarmaior"
        android:layout_marginTop="78dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/txtpontomaior"
        android:layout_below="@+id/textView14"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txttempoMaior"
        android:layout_below="@+id/txtpontomaior"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btPublicar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/publicar"
        android:enabled="false"
        android:onClick="btPublicar"
        android:visibility="invisible"
        android:layout_below="@+id/txttempoMaior"
        android:layout_toLeftOf="@+id/btdir"
        android:layout_toStartOf="@+id/btdir" />

</RelativeLayout>
